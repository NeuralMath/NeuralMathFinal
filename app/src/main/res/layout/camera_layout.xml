<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marc4492.neuralmath.CameraActivity">

    <Button
        android:id="@+id/camButton"
        style="?attr/imageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:drawableTop="@drawable/camera"
        android:text="@string/callCam"
        android:textSize="24sp" />

    <Button
        android:id="@+id/galButton"
        style="?attr/imageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/camButton"
        android:layout_marginTop="47dp"
        android:drawableTop="@drawable/gallery"
        android:text="@string/callGal"
        android:textSize="24sp" />

</RelativeLayout>
